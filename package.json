{
  "name": "@mimajka/svelte-web-component",
  "version": "0.0.17",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "release": "npm run build && np && clean-publish && npm run push-tag",
    "push-tag": "git add . && git commit -m $npm_package_version && git tag v$npm_package_version && git push --follow-tags"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^1.1.0",
    "@tsconfig/svelte": "^3.0.0",
    "autoprefixer": "^10.4.13",
    "clean-publish": "^4.0.1",
    "np": "^7.6.2",
    "sass": "^1.56.1",
    "svelte": "^3.52.0",
    "svelte-check": "^2.9.2",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.0",
    "typescript": "^4.6.4",
    "vite": "^3.2.3",
    "vite-plugin-css-injected-by-js": "^2.1.1"
  },
  "main": "./dist/svelte-web-component.umd.cjs",
  "module": "./dist/svelte-web-component.js",
  "exports": {
    ".": {
      "import": "./dist/svelte-web-component.js",
      "require": "./dist/svelte-web-component.umd.cjs"
    }
  },
  "type": "module",
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "np": {
    "yarn": false,
    "tests": false,
    "publish": false
  },
  "clean-publish": {
    "fields": [
      "np"
    ]
  }
}
